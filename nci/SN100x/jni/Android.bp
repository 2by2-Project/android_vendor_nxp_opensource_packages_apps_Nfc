package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_library_shared {
    name: "libnfc_nci_jni",
    cflags:
     ["-DNXP_EXTNS=TRUE",
      "-DNXP_SRD=TRUE",]  + [
      "-DNXP_QTAG=TRUE",]  + [
      "-DFEATURE_SECURE_READER",
        "-Wall",
        "-Wextra",
        "-Wno-unused-parameter",
        "-Werror",
        "-fexceptions",
    ],
    srcs: ["**/*.cpp"],

    include_dirs: [
        "external/libxml2/include",
        "frameworks/native/include",
        "system/nfc/SN100x/src/include",
        "system/nfc/SN100x/src/nfa/include",
        "system/nfc/SN100x/src/nfc/include",
        "system/nfc/SN100x/src/gki/ulinux",
        "system/nfc/SN100x/src/gki/common",
    ] + ["system/nfc/SN100x/utils/include"],

    shared_libs: [
        "libandroidicu",
        "libnativehelper",
        "libcutils",
        "libutils",
        "liblog",
        "libnfc-nci",
        "libchrome",
        "libbase",
        "vendor.nxp.nxpnfc@2.0",
    ],
    product_variables: {
        debuggable: {
            cflags: [
                "-DDCHECK_ALWAYS_ON",
                "-DDTA_ENABLED"
            ],
        },
    },
    static_libs: ["libxml2"],
    sanitize: {
        integer_overflow: true,
        misc_undefined: ["bounds"],
        scs: true,
    },
}

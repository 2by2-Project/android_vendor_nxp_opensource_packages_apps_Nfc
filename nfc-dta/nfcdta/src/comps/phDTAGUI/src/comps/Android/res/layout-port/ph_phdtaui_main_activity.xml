<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/nxp_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/nxp_img" />

        <TextView
            android:id="@+id/data_text_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/nxp_img"
            android:text="@string/dta_test_app"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:paddingBottom="5dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >


            <RelativeLayout
                android:id="@+id/parent_execution_pattern_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp" >

                <RelativeLayout
                    android:id="@+id/execution_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ph_border_different_color_one"
                    android:padding="18dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/execution_mode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/execution_mode"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/auto_manual_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/execution_mode"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/auto_radio_button"
                            android:layout_marginTop="10dp"
                            android:checked="false"
                            android:text="@string/auto" />

                        <RadioButton
                            android:id="@+id/manual_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:checked="true"
                            android:text="@string/manual" />
                    </RadioGroup>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pattern_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/execution_layout"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ph_border_different_color_one"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/pattern_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="@string/pattern"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/custom"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:ems="10"
                        android:layout_marginTop="17dp"
                        android:hint="Custom" >
                    </EditText>

                    <Spinner
                        android:id="@+id/spinner_text"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/pattern_text"
                        android:layout_marginTop="30dp"
                        android:entries="@array/multi_text_array"
                        android:popupBackground="#111111"
                        android:spinnerMode="dropdown" />

<!--                     <TextView
                        android:id="@+id/multiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/custom"
                        android:layout_alignBottom="@+id/custom"
                        android:layout_toLeftOf="@+id/spinner_text"
                        android:text="@string/multi"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" /> -->
                </RelativeLayout>
            </RelativeLayout>

<RelativeLayout

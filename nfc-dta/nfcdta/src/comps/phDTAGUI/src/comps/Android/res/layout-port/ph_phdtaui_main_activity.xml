                        android:gravity="center"
                        android:hint="@string/enter_file_path"
                        android:singleLine="true" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/divese_selection_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/log_msg_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ph_border_different_color_three"
                    android:padding="2dp" >

                    <TextView
                        android:id="@+id/device_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/device"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/device_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/device_msg"
                        android:visibility="invisible"
                        android:layout_centerHorizontal="true" >

                        <TextView
                            android:id="@+id/deviceselection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:text="@string/device_selection"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#111111"
                            android:textSize="15sp" />

                        <Spinner
                            android:id="@+id/device_selector"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="90dp"
                            android:layout_toRightOf="@id/deviceselection"
                            android:gravity="right"
                            android:popupBackground="#111111"
                            android:spinnerMode="dropdown" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/device_layout"
                        android:layout_marginTop="3dp" >

                        <CheckBox
                            android:id="@+id/versionnumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/version_number" />

                        <TextView
                            android:id="@+id/firmwareversion_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/versionnumber"
                            android:text="@string/firmare_version"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/custom_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divese_selection_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/custom_msg" />

                <TextView
                    android:id="@+id/tcp_ip_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/custom_msg"
                    android:layout_centerHorizontal="true"
                    android:text="@string/tcp_ip_status"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/show_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/divese_selection_layout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/show_msg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/run_lauout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="25dp" >

                <Button
                    android:id="@+id/stop"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:background="@color/grey"
                    android:padding="15dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/stop"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/run"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@+id/stop"
                    android:background="@color/green"
                    android:padding="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="40dp"
                    android:text="@string/run"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/exit_btn"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/stop"
                    android:background="@color/orange"
                    android:padding="15dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/exit"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/copyrights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/run_lauout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/copyright_nxp_semiconductors"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/version_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/run_lauout"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:paddingRight="10dp"
                android:text="@string/ui_views"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
